import java.util.Date;

public class DateTime {
	private int day;
	private int month;
	private int year;
	private int hour24;
	private int minutes;
	private String dayOfWeek;
	private Date theDate;

	public DateTime(Date theDay) {
		theDate = theDay;
	}
	public Date getTheDate()
	{
		return theDate;
	}
	public void setTheDate(Date newDate)
	{
		theDate = newDate;
	}
	public String printDateAndTime()
	{
		return DateTimeCreator.getDateString(this) + "\n" + DateTimeCreator.getTimeString(this);
	}
}
